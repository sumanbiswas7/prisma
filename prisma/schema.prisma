// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id       Int      @id @default(autoincrement())
  name     String   @db.VarChar(100)
  cratedAt DateTime @default(now())
  bio      String?

  Post Post[]
  Like Like[]
  @@map(name: "profile")
}

model Post {
  id        Int      @id @default(autoincrement())
  caption   String?
  image     String?
  createdAt DateTime @default(now())
  profileId Int
  author    Profile  @relation(fields: [profileId], references: [id])

  Like Like[]
  @@map(name: "post")
}

model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  profile   Int
  post      Int
  userId    Profile  @relation(fields: [profile], references: [id])
  postId    Post     @relation(fields: [post], references: [id])

  @@map(name: "like")
}
